{
  "name": "filkom-apps-be",
  "scripts": {
    "pretest": "docker compose up -d test-db && sleep 2 && bun --env-file=.env.test db:deploy",
    "test": "bun --env-test=.env.test test",
    "posttest": "docker compose down test-db",
    "dev": "bun run --hot src/index.ts",
    "db:migrate": "bunx prisma migrate dev",
    "db:deploy": "bunx prisma migrate deploy"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.2",
    "@prisma/client": "^5.16.0",
    "hono": "^4.4.9",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "prisma": "^5.16.0"
  }
}
